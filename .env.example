# Clerk Authentication - Required for Production
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/loansphere

# Node Environment
NODE_ENV=production

# Optional: Legacy authentication fallbacks (not required with Clerk)
JWT_SECRET=your-jwt-secret-fallback
SESSION_SECRET=your-session-secret-fallback

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Email Configuration (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password